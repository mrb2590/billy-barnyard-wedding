{
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "bracketSpacing": false,
    "semi": true,
    "trailingComma": "none",
    "vueIndentScriptAndStyle": true,
    "phpVersion": "8.1",
    "plugins": ["@prettier/plugin-php"],
    "pluginSearchDirs": false,
    "overrides": [
        {
            "files": ["*.php", "artisan"],
            "options": {
                "trailingCommaPHP": false,
                "tabWidth": 4,
                "printWidth": 120
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
